<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/grey">

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:gravity="end|bottom"
        android:paddingEnd="10dp"
        android:textSize="18sp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/white"
        android:gravity="end|bottom"
        android:hint="0"
        android:paddingEnd="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_history" />

    <android.support.v7.widget.GridLayout
        android:layout_width="410dp"
        android:layout_height="0dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result">

        <!-- PRIMERA LINEA DE BOTONES -->

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="4dp">
            <Button
                android:id="@+id/btn_dividir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/"
                android:backgroundTint="@color/btnGrey"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp">
            <Button
                android:id="@+id/btn_multiplicar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="18dp"
                android:text="*"
                android:backgroundTint="@color/btnGrey"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp">
            <Button
                android:id="@+id/btn_borrarUno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="c"
                android:backgroundTint="@color/colorRosa"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp">
            <Button
                android:id="@+id/btn_borrarTodo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="del"
                android:backgroundTint="@color/colorRosa"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <!-- FIN DE LA PRIMERA LINEA -->

        <!-- SEGUNDA LINEA DE BOTONES-->

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="4dp">
            <Button
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp">
            <Button
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp">
            <Button
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp">
            <Button
                android:id="@+id/btn_sumar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:backgroundTint="@color/btnGrey"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <!-- FIN DE LA SEGUNDA LINEA-->

        <!-- TERCERA LINEA DE BOTONES -->

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="4dp">
            <Button
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp">
            <Button
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp">
            <Button
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp">
            <Button
                android:id="@+id/btn_restar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:backgroundTint="@color/btnGrey"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <!-- FIN DE LA TERCERA LINEA -->

        <!-- CUARTA LINEA DE BOTONES -->

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="4dp">
            <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp">
            <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp">
            <Button
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="140dp"
            app:layout_rowSpan="2">

            <Button
                android:id="@+id/btn_igual"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="="
                android:backgroundTint="@color/btnGrey"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <!-- FIN DE LA CUERTA LINEA -->

        <!-- QUINTA LINEA DE BOTONES -->

        <android.support.constraint.ConstraintLayout
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginStart="4dp"
            app:layout_columnSpan="2">

            <Button
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="70dp">
            <Button
                android:id="@+id/btn_coma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:backgroundTint="@color/btnGrey"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <!-- FIN DE LA QUINTA LINEA -->

        <!-- SEXTA FILA -->
        <android.support.constraint.ConstraintLayout
            android:layout_width="304dp"
            android:layout_height="70dp"
            app:layout_columnSpan="4">

            <Button
                android:id="@+id/btn_borrarUnoHistorial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/holo_green_light"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Borrar ultimo numero historial"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <!-- FIN DE LA SEXTA FILA-->




    </android.support.v7.widget.GridLayout>


</android.support.constraint.ConstraintLayout>